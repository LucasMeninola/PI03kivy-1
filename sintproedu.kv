            mode: "rectangle"
            hint_text: "CEP:"
            max_text_length:70

        MDTextField:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_X:0.4
            mode: "rectangle"
            hint_text: "Endereço:"
            max_text_length:100

        MDTextField:
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint_X:0.4
            mode: "rectangle"
            hint_text: "N°"
            max_text_length:100


        MDTextField:
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint_X:0.4
            mode: "rectangle"
            hint_text: "Complemento:"
            max_text_length:100

        MDTextField:
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            size_hint_X:0.4
            mode: "rectangle"
            hint_text: "Bairro:"
            max_text_length:100

        MDTextField:
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            size_hint_X:0.4
            mode: "rectangle"
            hint_text: "Cidade:"
            max_text_length:100


        MDIconButton:
            icon: "reply"
            pos_hint: {'center_x': .1, 'center_y': .05}
            on_release: app.root.current = 'telacadastro'

